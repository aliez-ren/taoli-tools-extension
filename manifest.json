{
	"manifest_version": 3,
	"name": "Taoli Tools Extension",
	"version": "0.0.5",
	"description": "Taoli Tools Extension",
	"permissions": ["declarativeNetRequest"],
	"host_permissions": [
		"*://*.gate.io/*",
		"*://*.gate.com/*",
		"*://*.gateio.ws/*",
		"*://*.bitget.com/*",
		"*://*.binance.com/*",
		"*://*.coinbase.com/*",
		"*://*.okx.com/*",
		"*://*.backpack.exchange/*",
		"*://*.apex.exchange/*",
		"*://*.asterdex.com/*",
		"*://*.bybit.com/*",
		"*://*.mexc.com/*",
    "*://*.grvt.io/*",
    "*://*.pacifica.fi/*",
    "*://*.extended.exchange/*"
	],
	"background": {
		"service_worker": "background.js"
	},
	"content_scripts": [
		{
			"matches": ["https://taoli.tools/*", "http://localhost:5173/*"],
			"js": ["content.js"],
			"run_at": "document_start",
			"all_frames": true
		}
	],
	"web_accessible_resources": [
		{
			"matches": ["https://taoli.tools/*", "http://localhost:5173/*"],
			"resources": ["injected.js"]
		}
	],
	"action": {
		"default_title": "Taoli Tools Extension",
		"default_icon": {
			"16": "icons/icon16.png",
			"32": "icons/icon32.png",
			"48": "icons/icon48.png",
			"128": "icons/icon128.png"
		}
	},
	"icons": {
		"16": "icons/icon16.png",
		"32": "icons/icon32.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	}
}
